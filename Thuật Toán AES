# Padding dá»¯ liá»‡u thÃ nh bá»™i sá»‘ 16 (block AES)
def pad(data: bytes) -> bytes:
    pad_len = 16 - len(data) % 16
    return data + bytes([pad_len] * pad_len)

# Bá» padding sau khi giáº£i mÃ£
def unpad(data: bytes) -> bytes:
    pad_len = data[-1]
    return data[:-pad_len]

# HÃ m mÃ£ hÃ³a file vá»›i AES
def encrypt_file(data: bytes, key: str) -> bytes:
    if len(key) != 16:
        raise ValueError("KhÃ³a pháº£i cÃ³ Ä‘Ãºng 16 kÃ½ tá»±.")
    cipher = AES.new(key.encode(), AES.MODE_ECB)
    encrypted = cipher.encrypt(pad(data))
    return encrypted

# HÃ m giáº£i mÃ£ file vá»›i AES
def decrypt_aes(data: bytes, key: str) -> bytes:
    if len(key) != 16:
        raise ValueError("KhÃ³a pháº£i cÃ³ Ä‘Ãºng 16 kÃ½ tá»±.")
    cipher = AES.new(key.encode(), AES.MODE_ECB)
    decrypted = cipher.decrypt(data)
    return unpad(decrypted)

